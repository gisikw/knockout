#!/bin/sh
# Fail for first ticket (ko-a001 appears in stdin), succeed for second
if cat /dev/stdin | grep -q "Will fail"; then
  echo "This ticket cannot proceed."
  echo '```json'
  echo '{"disposition": "fail", "reason": "Not actionable"}'
  echo '```'
else
  echo "Looks good."
  echo '```json'
  echo '{"disposition": "continue"}'
  echo '```'
fi
