# Create a ticket with a triage note
exec ko add 'Some task' --triage 'unblock this ticket'
stdout '^ko-[0-9a-f]{4}$'
exec ko ls --json
stdout '"triage":\s*"unblock this ticket"'

# Update a ticket to set a triage note
exec ko update test-0001 --triage 'break this apart'
stdout 'test-0001 updated'
exec ko show test-0001
stdout 'triage: break this apart'

# Create a ticket without --triage, verify no triage field in its show output
exec ko add 'No triage task'
stdout '^ko-[0-9a-f]{4}$'
exec ko show test-0002
! stdout 'triage:'

