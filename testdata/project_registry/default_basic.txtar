# Set and query default project
env HOME=$WORK/home
mkdir $WORK/home

# Register a project and set as default
exec ko project set '#exo' --default
stdout 'project exo registered and set as default'

# Query default via project ls (shows * marker)
exec ko project ls
stdout '\* exo'

# Setting default for unregistered tags requires registering first
mkdir $WORK/ghost/.ko/tickets
cd $WORK/ghost
exec ko project set '#ghost' --default
stdout 'project ghost registered and set as default'

-- .ko/tickets/.keep --
