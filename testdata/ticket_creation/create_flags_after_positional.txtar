# Flags work after positional arg (agent-friendly)
exec ko add 'Bug ticket' -t bug
exec ko ls --json
stdout '"type":\s*"bug"'

# Priority after title
exec ko add 'High priority' -p 0
exec ko ls --json
stdout '"priority":\s*0'
stdout 'High priority'

# Multiple flags after title
exec ko add 'Full ticket' -p 1 -t bug -a 'Jane Doe' -d 'The description'
exec ko ls --json
stdout '"priority":\s*1'
stdout '"type":\s*"bug"'
stdout '"assignee":\s*"Jane Doe"'

# Mixed: some flags before, some after
exec ko add -t feature 'Mixed flags' -p 0
exec ko ls --json
stdout '"type":\s*"feature"'
stdout '"priority":\s*0'

