# Add with --project and multiple tags
env HOME=$WORK/home
mkdir $WORK/home

# Register target project
mkdir $WORK/target/.ko/tickets
cd $WORK/target
exec ko project set '#target'
cd $WORK

# Add with --project and multiple tags
exec ko add 'Refactor auth' --project=target --tags=security,urgent

# Verify ticket in target has tags as labels
env TICKETS_DIR=$WORK/target/.ko/tickets
exec ko ls --json
stdout 'Refactor auth'
stdout 'security'
stdout 'urgent'

