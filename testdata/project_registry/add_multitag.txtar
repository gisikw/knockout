# Multiple tags: first routes, rest are labels
env HOME=$WORK/home
mkdir $WORK/home

# Register target project
mkdir $WORK/target/.ko/tickets
cd $WORK/target
exec ko project set '#target'
cd $WORK

# Add with multiple tags
exec ko add 'Refactor auth #target #security #urgent'

# Verify ticket in target has extra tags as labels
env TICKETS_DIR=$WORK/target/.ko/tickets
exec ko query
stdout 'Refactor auth'
stdout '"status":"routed"'
stdout 'security'
stdout 'urgent'

