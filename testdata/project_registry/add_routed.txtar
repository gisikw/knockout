# Add with --project routes to target project
env HOME=$WORK/home
mkdir $WORK/home

# Register target project
mkdir $WORK/target/.ko/tickets
cd $WORK/target
exec ko project set '#target'
cd $WORK

# Add a routed ticket with --project flag
exec ko add 'Fix the thing' --project=target
stdout .

# Verify ticket exists in target project
env TICKETS_DIR=$WORK/target/.ko/tickets
exec ko ls --json
stdout 'Fix the thing'
stdout '"status":\s*"open"'

