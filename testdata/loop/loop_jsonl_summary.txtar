# Check that agent.log contains JSONL summary with all required fields
exec cat .ko/agent.log
stdout '"ts":"'
stdout '"tickets_processed":2'
stdout '"succeeded":2'
stdout '"failed":0'
stdout '"blocked":0'
stdout '"decomposed":0'
stdout '"stop_reason":"max_tickets"'
stdout '"runtime_seconds":'

