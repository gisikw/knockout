# Register a project with a tag
env HOME=$WORK/home
mkdir $WORK/home
exec ko project set '#fort-nix'
stdout 'project fort-nix registered'

# Registry file was created
exists $WORK/home/.config/knockout/projects.yml

# Registry contains the project with correct path
exec ko project ls
stdout 'fort-nix'
stdout $WORK

# Register a second project
mkdir $WORK/other-project/.ko/tickets
cd $WORK/other-project
exec ko project set '#exo'
stdout 'project exo registered'

# Both projects are listed
exec ko project ls
stdout 'fort-nix'
stdout 'exo'

-- .ko/tickets/.keep --
